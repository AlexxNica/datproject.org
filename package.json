{
  "name": "dat-land",
  "version": "1.2.3",
  "description": "An online place for dats.",
  "main": "src/js/app.js",
  "scripts": {
    "build-js": "browserify -g yo-yoify src/js/app.js > public/js/app.js",
    "build-css": "node-sass --importer node_modules/node-sass-magic-importer src/scss/main.scss public/css/main.css",
    "build": "npm run build-js && npm run build-css",
    "watch-js": "watchify src/js/app.js -o public/js/app.js",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch": "npm run watch-js",
    "start": "npm run watch & http-server .",
    "deploy": "gh-pages-deploy",
    "test": "standard",
    "lint": "standard"
  },
  "author": "Karissa McKelvey <karissa@karissamck.com> (http://karissamck.com/)",
  "license": "MIT",
  "dependencies": {
    "yo-yo": "^1.2.2"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^12.0.0",
    "choppa": "^1.0.2",
    "concat-stream": "^1.5.1",
    "dat-design": "^1.1.0",
    "drag-drop": "^2.11.0",
    "filereader-stream": "^1.0.0",
    "gh-pages-deploy": "^0.4.2",
    "http-server": "^0.9.0",
    "hyperdrive": "^6.2.1",
    "hyperdrive-archive-swarm": "^3.0.1",
    "hyperdrive-ui": "^2.0.0",
    "intro.js": "^2.1.0",
    "level-browserify": "^1.1.0",
    "memdb": "^1.3.1",
    "minidux": "^1.0.1",
    "node-sass": "^3.8.0",
    "node-sass-magic-importer": "^0.1.4",
    "pretty-bytes": "^3.0.1",
    "speedometer": "^1.0.0",
    "standard": "^7.1.2",
    "watchify": "~3.6.0",
    "wzrd": "^1.3.1",
    "yo-yoify": "^3.1.0"
  },
  "gh-pages-deploy": {
    "prep": [
      "build"
    ],
    "noprompt": false
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/karissa/hyperdrive-ui.git"
  },
  "bugs": {
    "url": "https://github.com/karissa/hyperdrive-ui/issues"
  }
}
